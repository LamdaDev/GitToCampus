# --- Authentication ---
# Your GitHub Personal Access Token (Classic or Fine-grained)
GITHUB_API_TOKEN=""

# --- Target Project ---
# The username or organization name that owns the project
GITHUB_PROJECT_OWNER=your_project_owner # e.g. "LamdaDev"

# Must be 'user' or 'organization'
GITHUB_OWNER_TYPE=your_owner_type # e.g. "user" or "organization"

# The number found in the project URL (e.g., projects/1)
GITHUB_PROJECT_NUMBER=your_project_number # e.g. "1"

# The name of the repository (used for filtering items)
GITHUB_REPOSITORY=your_repository_name # e.g. "GitToCampus"

# --- Field Mapping (Must match Project Settings exactly) ---
GITHUB_FIELD_ITERATION=your_sprint_field_name # e.g. "Sprint #, "Iteration", etc.
GITHUB_FIELD_ESTIMATE=your_estimate_field_name # e.g. "Story Points", "Effort", etc.
GITHUB_FIELD_STATUS=your_status_field_name # e.g. "Status", "State", etc.

# --- Pipeline Configuration ---
# A JSON string mapping status columns to completion percentages (0.0 to 1.0).
# This allows other users to have completely different columns (e.g. "QA", "UAT").
GITHUB_STATUS_PIPELINE='[
    ["Backlog", 0.0],
    ["In Progress", 0.33],
    ["To be reviewed", 0.67],
    ["Done", 1.0]
]'
